<% if @params && !@params[:errors].empty? %>
  <div class="alert alert-warning" role="alert">
    <p>There are a few mistakes</p>
    <ul>
      <% @params[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputAuthor">Author</label>
      <input type="text" class="form-control" name="name" placeholder="Mark Twain" value="<%= @params && @params[:name] %>">
    </div>
    <div class="form-group col-md-6">
      <label for="inputBook">Book</label>
      <input type="text" class="form-control" name="book" placeholder="The Gilded Age: A Tale of Today" value="<%= @params && @params[:book] %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDate">Date</label>
    <input type="text" class="form-control" name="date" placeholder="2017-01-01" value="<%= @params && @params[:date] %>">
  </div>
  <div class="input-group mb-3">
  <select class="custom-select" id="inputGroupSelect03" aria-label="Example select with button addon">
    <option selected>Choose...</option>
    <option value="<%= @params && @params[:format] %>">audio</option>
    <option value="<%= @params && @params[:format] %>">electronic</option>
    <option value="<%= @params && @params[:format] %>">printed</option>
  </select>
</div>
<div class="form-group">
    <label for="inputSize">Size</label>
    <input type="text" class="form-control" name="size" value="<%= @params && @params[:size] %>">
  </div>
  <div class="form-group">
    <label for="inputMark">Mark</label>
    <input type="text" class="form-control" name="mark" value="<%= @params && @params[:mark] %>">
  </div>
  <div class="form-group">
    <label for="inputComment">Comment</label>
    <input type="text" class="form-control" name="comment" value="<%= @params && @params[:comment] %>">
  </div>
  <input class="btn btn-primary" type="submit" value="Save">
</form>