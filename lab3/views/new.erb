<% if @params && !@params[:errors].empty? %>
  <div class="alert alert-warning" role="alert">
    <p>There are a few mistakes</p>
    <ul>
      <% @params[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form method="post">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputAuthor">Author</label>
      <input type="text" class="form-control" name="name" placeholder="Mark Twain" value="<%= @params && @params[:name] %>">
    </div>
    <div class="form-group col-md-6">
      <label for="inputBook">Book</label>
      <input type="text" class="form-control" name="book" placeholder="The Gilded Age: A Tale of Today" value="<%= @params && @params[:book] %>">
    </div>
  </div>
  <div class="form-group">
    <label for="inputDate">Date</label>
    <input type="text" class="form-control" name="date" placeholder="2017-01-01" value="<%= @params && @params[:date] %>">
  </div>
  <input class="btn btn-primary" type="submit" value="Save">
</form>