<% if @params && !@params[:errors].empty? %>
  <div class="container errors">
    <p>При заполнении формы возникли ошибки</p>
    <ul>
      <% @params[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputAuthor">Author</label>
      <input type="text" class="form-control" value="<%= @params && @params[:name] %>>
    </div>
    <div class="form-group col-md-6">
      <label for="inputBook">Book</label>
      <input type="text" class="form-control" value="<%= @params && @params[:book] %>>
    </div>
  </div>
  <div class="form-group">
    <label for="inputDate">Address</label>
    <input type="text" class="form-control" placeholder="2017-01-01" value="<%= @params && @params[:date] %>>
  </div>
  <input class="btn btn-primary" type="submit" value="Add">
</form>