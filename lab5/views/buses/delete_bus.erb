<div class='container'>
<p> Are you sure you want to delete this bus? </p>
</div>
<%form({ method: :post },{ obj: @parameters }) do |f| %>
<div class='container'>
<div class="container d-flex flex-column">
<%= f.input(:confirmation, type: :checkbox, label: 'Yes' )%>
</div>
<div class='container'>
<%= f.button(value: 'Delete', class: "btn btn-danger")%>
<a href="<%= buses_path %>" class="btn btn-ligth">Cancel</a>
</div>
</div>
<%end%>
