<% form({ method: :post },{ obj: @parameters }) do |f| %>
    <div class="form-group">
      <%= f.input(:number, type: :text, label: 'Номер автобуса', placeholder: '23', disabled: @read)%>
    </div>
    <div class="form-group">
      <%= f.input( :consumption, type: :text, label: 'Расход бензина', placeholder: '25', disabled: @read)%>
    </div>
    <div class="form-group">
      <%= f.input( :name, type: :text, label: 'ФИ водителя', placeholder: 'Иванова Анна', disabled: @read)%>
    </div>
    <div class="form-group">
      <%= f.input( :rout, type: :select,  label: 'Номер маршрута', options: @ids) %>
    </div>
    
    <div >
      <%= f.input( :state, type: :select, label: 'Состояние', options: StateType.all)%>
    </div>
    <div class="form-group">
      <%= f.button(value: form_type, class: "btn btn-light") %>
      <a href="<%= back_location %>" class="btn btn-light">Отмена</a>
    </div>
<% end %>